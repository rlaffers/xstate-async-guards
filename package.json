{
  "name": "xstate-async-guards",
  "version": "1.0.1",
  "description": "XState helper for using asynchronous guards",
  "source": "src/index.js",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "exports": {
    "import": "./lib/index.mjs",
    "require": "./lib/index.js"
  },
  "targets": {
    "main": {
      "optimize": true
    },
    "module": {
      "optimize": true
    }
  },
  "scripts": {
    "test": "jest --passWithNoTests",
    "lint": "eslint src/",
    "format": "prettier --write README.md src/**/*.js",
    "prepare": "husky install",
    "build": "parcel build",
    "watch": "parcel watch"
  },
  "keywords": ["xstate"],
  "author": "Richard Laffers",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "parcel": "^2.3.2",
    "prettier": "^2.5.1"
  },
  "peerDependencies": {
    "xstate": "^4.30.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">= 12"
  },
  "homepage": "https://github.com/rlaffers/xstate-async-guards",
  "repository": {
    "type": "git",
    "url": "https://github.com/rlaffers/xstate-async-guards"
  }
}
